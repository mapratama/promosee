<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="182dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/Black"
                        android:alpha="0.8">

                        <LinearLayout
                            android:id="@+id/total_voucher_layout"
                            android:layout_alignParentRight="true"
                            android:paddingTop="15sp"
                            android:paddingBottom="15sp"
                            android:paddingLeft="5sp"
                            android:paddingRight="5sp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@color/DarkRed"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/total_voucher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/White"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textAllCaps="true"
                                android:text="10"/>

                            <TextView
                                android:layout_marginTop="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/White"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="8sp"
                                android:textAllCaps="true"
                                android:text="@string/vouchers"/>

                        </LinearLayout>

                        <LinearLayout
                            android:paddingLeft="15sp"
                            android:paddingRight="15sp"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_toLeftOf="@id/total_voucher_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/name_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/White"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="Lazada" />

                            <TextView
                                android:id="@+id/category_text"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/White"
                                android:textSize="12sp"
                                android:text="Lazada" />

                            <TextView
                                android:id="@+id/address_text"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/White"
                                android:textSize="12sp"
                                android:text="Lazada" />

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/online_member_layout"
                    android:visibility="gone"
                    android:padding="15sp"
                    android:background="@color/LightGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/Black"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginLeft="5sp"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:text="@string/online_membercard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/offline_member_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp">

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:id="@+id/add_membercard_layout"
                        android:background="@color/LightBlue"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:paddingLeft="5sp"
                        android:paddingRight="10sp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/add_icon"
                            android:layout_width="35sp"
                            android:layout_height="35sp" />

                        <TextView
                            android:layout_gravity="center"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_marginLeft="5sp"
                            android:textSize="11sp"
                            android:text="@string/add_new_membercard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_toLeftOf="@id/add_membercard_layout"
                        android:background="@color/Yellow"
                        android:paddingTop="8sp"
                        android:paddingBottom="8sp"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/member_card_icon"
                            android:layout_width="50sp"
                            android:layout_height="50sp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@color/Black"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:maxLines="1"
                                android:layout_marginLeft="5sp"
                                android:textSize="11sp"
                                android:text="@string/follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/name_membercard_text"
                                android:textColor="@color/LightRed"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:textAllCaps="true"
                                android:layout_marginLeft="5sp"
                                android:textSize="11sp"
                                android:text="@string/follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textColor="@color/Black"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:layout_marginLeft="5sp"
                                android:textSize="11sp"
                                android:maxLines="1"
                                android:text="@string/member_cards"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/voucher_recyclerview"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start" >

        <include layout="@layout/left_menu" />

    </android.support.design.widget.NavigationView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <include layout="@layout/right_menu" />

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
